pipeline {
    // comment for testing webhoook2
    agent any // run on any machine

    tools {
        // softwares needs in build
        jdk 'jdk17'
        maven 'maven3'
    }

    stages {
        stage('Checkout Code') {
            steps {
                // download code from git Repo
                echo 'Checking out code...'
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                // run command tools compile
             echo 'Building the brief-service application...'

             // --- DEBUGGING ---
             // Let's see where Jenkins is running this script from.
             // We suspect it's inside the 'brief-service' directory.
             echo "--- Current Directory Info ---"
             sh 'pwd'
             sh 'echo "--- Listing Parent Directory Contents (where mvnw should be) ---"'
             sh 'ls -la ..'
             echo "--- End Directory Info ---"

             // Grant execute permission to mvnw, which is in the parent directory ('..')
             sh 'chmod +x ../mvnw'

             // Run mvnw from the parent directory.
             // The '-f pom.xml' flag will resolve to the pom.xml in the current directory,
             // which is 'brief-service', and this is correct.
             sh '../mvnw -f pom.xml clean package -DskipTests'
            }
        }

        stage('Archive Artifact') {
            steps {
                // find the built .jar file
                echo 'Archiving the artifact...'
                // Since the script runs inside 'brief-service', the path to the artifact is now relative.
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
